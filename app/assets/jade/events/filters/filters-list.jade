mixin filter( mt )
   .filters__holder( class='#{mt}' )
      #filters_slider_icon.icon-sliders.base_icon-big
      #filters_close_icon.icon-cross.base_icon-big( style='display: none' )
      #filter_chosen_panel.filters( style='display: none' )
         .filter__chosen_text
         .filter__icon.icon-cross.base_icon
      .filters__trigger_holder
         .filters__list_trigger.filters( data-filter-type='type' )
            span Фильтр&nbsp;
            span по типу
         .filters__list_trigger.filters( data-filter-type='side' )
            span Фильтр&nbsp;
            span по частям света
         .filters__list_trigger.filters( data-filter-type='century' )
            span Фильтр&nbsp;
            span по векам
         .filters__list_trigger.filters( data-filter-type='alphabet' )
            span Фильтр&nbsp;
            span по алфавиту

      #filter_type-type.filters__list( style='display: none' )
         include ../../mixins/__filter-item
         +filter( 'Рождение', 'birth' )
         +filter( 'Смерть', 'death' )
         +filter( 'Воцарение', 'crown' )
         +filter( 'Реформа', 'reforma')
         +filter( 'Революция', 'bomb' )
         +filter( 'Восстание', 'fire' )
         +filter( 'Изобретение', 'drafting_compass' )
         +filter( 'Открытие', 'compass' )
         +filter( 'Война', 'war' )
         +filter( 'Геноцид', 'crossbones' )
         +filter( 'Союз', 'diagram' )
         +filter( 'Перемирие', 'peace' )
         +filter( 'Битва', 'battle' )
         +filter( 'Катастрофа', 'meteor' )
         +filter( 'Строительство', 'construction' )
      #filter_type-side.filters__list( style='display: none' )
         +filter( 'Европа', 'europe' )
         +filter( 'Евразия', 'eurasia' )
         +filter( 'Азия', 'asia' )
         +filter( 'Африка', 'africa' )
         +filter( 'Северная Америка', 'north_america' )
         +filter( 'Южная Америка', 'south_america' )
         +filter( 'Австралия', 'australia' )
         +filter( 'Антарктида', 'antarctica' )
      #filter_type-century.filters__list( style='display: none' )
         include ../../mixins/__filter-item
         +filter( 'До нашей эры', 'dice' )
         +filter( '0 - 1000', 'dice-one' )
         +filter( '1000 - 1400', 'dice-two' )
         +filter( '1400 - 1700', 'dice-three' )
         +filter( '1700 - 1850', 'dice-four' )
         +filter( '1850 - 1950', 'dice-five' )
         +filter( '1950 - 2000', 'dice-six' )
      #filter_type-alphabet.filters__list( style='display: none' )
         include ../../mixins/__filter-item-letter
         +filter-letter( 'А' )
         +filter-letter( 'Б' )
         +filter-letter( 'В' )
         +filter-letter( 'Г' )
         +filter-letter( 'Д' )
         +filter-letter( 'Е' )
         +filter-letter( 'Ё' )
         +filter-letter( 'Ж' )
         +filter-letter( 'З' )
         +filter-letter( 'И' )
         +filter-letter( 'К' )
         +filter-letter( 'Л' )
         +filter-letter( 'М' )
         +filter-letter( 'Н' )
         +filter-letter( 'О' )
         +filter-letter( 'П' )
         +filter-letter( 'Р' )
         +filter-letter( 'С' )
         +filter-letter( 'Т' )
         +filter-letter( 'У' )
         +filter-letter( 'Ф' )
         +filter-letter( 'Х' )
         +filter-letter( 'Ц' )
         +filter-letter( 'Ч' )
         +filter-letter( 'Э' )
         +filter-letter( 'Ю' )
         +filter-letter( 'Я' )

      #filters_decoding
         sup ?
         .icon-cross
      #filter_help( style='display: none' )
         .filters__index
            .h3.mb-05 Тип события
            +filter( 'Рождение', 'birth' )
            +filter( 'Смерть', 'death' )
            +filter( 'Воцарение', 'crown' )
            +filter( 'Реформа', 'reforma')
            +filter( 'Революция', 'bomb' )
            +filter( 'Восстание', 'fire' )
            +filter( 'Изобретение', 'drafting_compass' )
            +filter( 'Открытие', 'compass' )
            +filter( 'Война', 'war' )
            +filter( 'Геноцид', 'crossbones' )
            +filter( 'Союз', 'diagram' )
            +filter( 'Перемирие', 'peace' )
            +filter( 'Битва', 'battle' )
            +filter( 'Катастрофа', 'meteor' )
            +filter( 'Строительство', 'construction' )
         .filters__index
            .h3.mb-05 Части света
            +filter( 'Европа', 'europe' )
            +filter( 'Евразия', 'eurasia' )
            +filter( 'Азия', 'asia' )
            +filter( 'Африка', 'africa' )
            +filter( 'Северная Америка', 'north_america' )
            +filter( 'Южная Америка', 'south_america' )
            +filter( 'Австралия', 'australia' )
            +filter( 'Антарктида', 'antarctica' )
         #filter_help_century.filters__index
            .h3.mb-05 По векам
            +filter( 'До нашей эры', 'dice' )
            +filter( '0 - 1000', 'dice-one' )
            +filter( '1000 - 1400', 'dice-two' )
            +filter( '1400 - 1700', 'dice-three' )
            +filter( '1700 - 1850', 'dice-four' )
            +filter( '1850 - 1950', 'dice-five' )
            +filter( '1950 - 2000', 'dice-six' )
         #filter_help_alphabet.filters__index
            .h3 По алфавиту
            .h5.mb-05 Берётся первая буква
               br
               | названия
            .filters__item
               .filter__text Война с
                  span Х
                  | еттами
            .filters__item
               .filter__text Отмена
                  span К
                  | репостного права
