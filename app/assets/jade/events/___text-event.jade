mixin text( amountofP, text, text2, text3, text4, text5 )
   case ( amountofP )
      default
         .event__more
            .icon-cross( style='display: none' )
      when '1'
         .event__more
            .icon-more
            .icon-cross
         .event__more-panel.panel-extra-info( style='display: none' )
            p #{text}
      when '2'
         .event__more
            .icon-more
            .icon-cross
         .event__more-panel.panel-extra-info( style='display: none' )
            p #{text}
            p #{text2}
      when '3'
         .event__more
            .icon-more
            .icon-cross
         .event__more-panel.panel-extra-info( style='display: none' )
            p #{text}
            p #{text2}
            p #{text3}
      when '4'
         .event__more
            .icon-more
            .icon-cross
         .event__more-panel.panel-extra-info( style='display: none' )
            p #{text}
            p #{text2}
            p #{text3}
            p #{text4}
      when '5'
         .event__more
            .icon-more
            .icon-cross
         .event__more-panel.panel-extra-info( style='display: none' )
            p #{text}
            p #{text2}
            p #{text3}
            p #{text4}
            p #{text5}
